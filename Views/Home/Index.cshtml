@model IEnumerable<AmazonCloneMVC.Models.Produit>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        font-family: 'Roboto', Arial, sans-serif;
        background-color: #f9f9f9; 
        color: #333;
        margin: 0;
        padding: 0;
    }

    h1 {
        color: #d9534f;
        text-align: center;
        margin-top: 3rem;
    }

    .search-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 20px;
    }

    .search-input {
        padding: 12px;
        width: 300px;
        border: 2px solid #007bff; /* Blue border */
        border-radius: 5px 0 0 5px;
        outline: none;
        font-size: 1em;
    }

    .search-button {
        padding: 12px 20px;
        background-color: #007bff; /* Blue button color */
        color: white;
        border: 2px solid #007bff; /* Blue border */
        border-radius: 0 5px 5px 0;
        cursor: pointer;
        font-size: 1em;
    }

        .search-button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

    .card {
        margin-bottom: 30px; /* Increased margin */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Light box shadow */
    }

    .card-title {
        font-size: 1.5em;
        font-weight: bold;
        color: #333; /* Dark text color */
    }

    .card-text {
        color: #28a745;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        font-size: 1em;
    }

    .btn-outline-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: #fff;
        font-size: 1em;
    }
</style>

<h1 class="mt-5">Bienvenue</h1>
<div class="row mt-2"></div>

<form asp-action="Index">
    <div class="search-container">
        <input type="text" name="searchString" class="search-input" placeholder="Search...">
        <button type="submit" class="search-button">Search</button>
    </div>
</form>
<div class="row mt-5"></div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImagePath" style="width:100%; height:auto;" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Description)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Prix) MAD</p>
                    <form asp-action="AddToCard" class="row">
                        <input name="ProduitId" type="hidden" value="@item.ProduitID" class="form-control" />
                        <button class="col btn btn-warning mt-2" type="submit">Add to Cart</button>
                        <a href="Produits/Details/@item.ProduitID" class="col btn btn-outline-info mt-2">Details</a>
                    </form>
                </div>
            </div>
        </div>
    }
    <div class="row mt-5"></div>
</div>
