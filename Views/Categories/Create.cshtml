@model AmazonCloneMVC.Models.Categorie

@{
    ViewData["Title"] = "Create";
}

<style>
 
    body {
        background-color: #f0f0f0; 
    }

    h1 {
        color: #333; 
        text-align: center;
        margin-top: 3rem;
    }

    h4 {
        font-size: 1.5em; 
        color: #555;
    }

    .row {
        margin: 0 auto;
        max-width: 600px; 
    }

    .form-group {
        margin-bottom: 25px;
    }

    .control-label {
        font-weight: bold;
        color: #007bff;
    }

    .form-control {
